{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="container d-flex justify-content-center align-items-center">
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-body">
						<div class="form-group">
							<h1 class="text-center">S'enregistrer</h1>

							<label class="form-label">{{ form_errors(registrationForm) }}</label>

							<label class="form-label">{{ form_start(registrationForm) }}</label>
							<label class="form-label">{{ form_row(registrationForm.email) }}</label></br>
							<label class="form-label">{{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}</label></br>
							<label class="form-label">{{ form_row(registrationForm.agreeTerms) }}</label>
							<div class="text-center">
								<button type="submit" class="btn btn-primary mt-3">S'enregistrer</button>
							</div>
						</div>
					</div>
					{{ form_end(registrationForm) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}

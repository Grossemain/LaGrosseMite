{% extends 'base.html.twig' %}

{% block title %}Sections index
{% endblock %}

{% block body %}
	<div class="container-fluid text-center">
		<h1>Sections index</h1>
		{% if is_granted('ROLE_ADMIN') %}
		<span><a href="{{ path('app_sections_new') }}">Create new</a></span>
		{% endif %}
		<div class="d-md-flex flex-md-wrap bg-primary">
			{% for section in sections %}
				<div class="flex-md-fill col-md-3 card m-4 ">
					<div class="card-body">
						<span>{{ section.id }}</span>
						<h2 class="card-title">{{ section.nameSection }}</h2>
						<p class="card-text">{{ section.description }}</p>
						<span>{{ section.imgSection }}</span></br>
						<button class="btn btn-primary "><a href="{{ path('app_sections_show', {'id': section.id}) }}" class="link-light text-decoration-none">Fiche {{ section.nameSection }}</a></button>
						{% if is_granted('ROLE_ADMIN') %}
						<div class="card-footer">
							<span>
								<a href="{{ path('app_sections_show', {'id': section.id}) }}">show</a>
							</span>
							<span>
								<a href="{{ path('app_sections_edit', {'id': section.id}) }}">edit</a>
							</span>
						</div>
						{% endif %}
					</div>
				</div>
			{% else %}
				<span>no records found</span>
			</div>
		{% endfor %}
	</div>
{% endblock %}

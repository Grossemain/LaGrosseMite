<div class="container d-flex justify-content-center align-items-center">
	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="card-body">
					<div class="form-group">
						{{ form_start(form) }}
						<label class="form-label">Nom de la technique:</label><br>{{ form_widget(form.nameSection) }}
						<label class="form-label">Description de la technique:</label><br>{{ form_widget(form.description) }}
						<label class="form-label">Image de la technique:</label><br>{{ form_widget(form.img_section) }}
						<div class="container d-flex justify-content-center align-items-center">
							<div class="row">
								<div class="col-12">
									<button type="submit" class="btn btn-primary mt-3">{{ button_label|default('Save') }}</button>
								</div>
							</div>
						</div>
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


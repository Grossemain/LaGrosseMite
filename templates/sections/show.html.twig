{% extends 'base.html.twig' %}

{% block title %}Sections{% endblock %}

{% block body %}
    <h1>Sections</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ section.id }}</td>
            </tr>
            <tr>
                <th>NameSection</th>
                <td>{{ section.nameSection }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ section.description }}</td>
            </tr>
            <tr>
                <th>Img_section</th>
                <td>{{ section.imgSection }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sections_index') }}">back to list</a>
	{% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_sections_edit', {'id': section.id}) }}">edit</a>

    {{ include('sections/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
